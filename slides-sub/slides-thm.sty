\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{slides-thm}

\RequirePackage[skins, many]{tcolorbox}
\RequirePackage{etoolbox}
\tcbuselibrary{theorems}


\tcbset{%
    theo/.style = {%
        enhanced,
        % colframe = #1!80!black,
        colback = #1!5,
        arc = 0pt,
        attach boxed title to top left = {
            yshift = -2mm,
            xshift = 0.5cm
        },
        colbacktitle = #1!15,
        coltitle = LEIblue,
        fonttitle = \bfseries,
        boxed title style = {arc = 0pt}
    }
} 


\makeatletter
\newtcolorbox{blockpic}[2]{
    enhanced,
    theo = {LEIblue},
    title = {#1},
    overlay = {
        \node[inner sep = 0pt] at (frame.north east){
            \begin{tikzpicture}
                {#2}
            \end{tikzpicture}
        };
    }
}
\makeatother

\makeatletter
\renewtcolorbox{block}[1]{
    enhanced,
    theo = {LEIblue},
    title = {#1}
}
\makeatother

\makeatletter
\renewtcolorbox{theorem}[1][]{
    enhanced,
    theo = {LEIblue},
    title = {\translateword{Theorem}{Теорема}\ifthenelse{\equal{#1}{}}{}{[{#1}]}}
}
\makeatother

\makeatletter
\renewtcolorbox{definition}[1][]{
    enhanced,
    theo = {blue},
    title = {\translateword{Definition}{Определение}\ifthenelse{\equal{#1}{}}{}{[{#1}]}}
}
\makeatother


\makeatletter
\newtcolorbox{conjecture}[1][]{
    enhanced,
    theo = {blue},
    title = {\translateword{Conjecture}{Гипотеза}\ifthenelse{\equal{#1}{}}{}{[{#1}]}}
}
\makeatother


\makeatletter
\renewtcolorbox{lemma}[1][]{
    enhanced,
    theo = {LEIblue},
    title = {\translateword{Lemma}{Лемма}\ifthenelse{\equal{#1}{}}{}{[{#1}]}}
}
\makeatother


\makeatletter
\renewtcolorbox{corollary}[1][]{
    enhanced,
    theo = {LEIblue},
    title = {\translateword{Corollary}{Следствие}\ifthenelse{\equal{#1}{}}{}{[{#1}]}}
}
\makeatother


\makeatletter
\newtcolorbox{proposition}[1][]{
    enhanced,
    theo = {LEIblue},
    title = {\translateword{Proposition}{Утверждение}\ifthenelse{\equal{#1}{}}{}{[{#1}]}}
}
\makeatother


\makeatletter
\newtcolorbox{exercise}[1][]{
    enhanced,
    theo = {blue},
    title = {Exercise\ifthenelse{\equal{#1}{}}{}{[{#1}]}}
}
\makeatother




