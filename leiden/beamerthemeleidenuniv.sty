        \usebeamerfont{title}\centering \inserttitle\par
        \usebeamerfont{subtitle}\usebeamercolor{subtitle}\insertsubtitle\par
        \begin{center}
            \usebeamercolor{titlegraphic}\inserttitlegraphic
        \end{center}
        \centering \usebeamerfont{author}\insertauthor
	\end{beamercolorbox}
    \vskip-1pt
    \begin{beamercolorbox}[wd = \paperwidth, left, sep = 1ex]{author}
        \centering  \usebeamerfont{institute}\usebeamerfont{date}\insertdate\par
    \end{beamercolorbox}
    \vfill
    \begin{beamercolorbox}[wd = \paperwidth, left, sep = 0.1ex]{date}
        \begin{minipage}[t]{0.33\paperwidth}
            \centering \includegraphics[height = 0.28\paperheight]{lu-logo.png}
        \end{minipage}
        \begin{minipage}[t]{0.33\paperwidth}
            \centering \includegraphics[height = 0.28\paperheight]{ku-logo.png}
        \end{minipage}
        \begin{minipage}[t]{0.32\paperwidth}
            \centering
            \begin{tikzpicture}
                \node at (0, 1.2) {\usebeamerfont{title}PDMI};
                \node at (0, 0.4) {\usebeamerfont{title}RAS};
                \node at (0, -0.5) {};
            \end{tikzpicture}
        \end{minipage}        
	\end{beamercolorbox}
}
