\setbeamertemplate{footline}{%
    \leavevmode
    \begin{beamercolorbox}[wd = 0.85\paperwidth, ht = 2.25ex, dp = 1ex, left]{section in head/foot}
        \usebeamerfont{section in head/foot}{\hskip3ex \insertshorttitle}
    \end{beamercolorbox}%
